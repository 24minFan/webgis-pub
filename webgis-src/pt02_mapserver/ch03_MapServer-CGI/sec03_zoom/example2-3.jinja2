{% extends "content.jinja2" %}

{#
The original tutorial is at:
http://demo.mapserver.org/cgi-bin/mapserv?map=/osgeo/mapserver/tutorial/htdocs/example2.map&layer=states&zoom=0&mode=browse&root=/tutorial&program=/cgi-bin/mapserv&map_web=template+example2-3.html

#}

<title>MapServer interaction: Add map scale</title>

{% block mainbody %}

    <div class="container">

        <h2>Add map scale</h2>


        <!-- START OF MAPSERVER FORM -->
        <form name="mapserv" method="GET" action="[program]" class="form-horizontal">
            <fieldset>
                <legend>Add map scale</legend>

                <br>
                <!-- HIDDEN MAPSERVER CGI VARIABLES -->
                <input type="hidden" name="root" value="[root]">
                <input type="hidden" name="program" value="[program]">
                <input type="hidden" name="map_web" value="[map_web]">
                <input type="hidden" name="map" value="[map]">
                <input type="hidden" name="imgext" value="[mapext]">
                <input type="hidden" name="imgxy" value="[center]">


                <div class="form-group">
                    <!-- SPECIFY VECTOR LAYERS -->


                    <label class="col-sm-2 control-label">Select the layer::</label>

                    <div class="col-sm-3">
                        <!-- SPECIFY VECTOR LAYERS -->
                        <input type="checkbox" name="layer" value="states" [states_check]>
                        National and regional boundaries
                    </div>
                    <div class="col-sm-3">
                        <input type="checkbox" name="layer" value="hydro" [hydro_check]>
                        River
                    </div>
                    <div class="col-sm-3">
                        <input type="checkbox" name="layer" value="roads" [roads_check]>
                        Roads

                    </div>
                </div>

                <!-- SPECIFY RASTER LAYERS -->
                <div class="form-group">
                    <label class="col-sm-2 control-label">Select background:</label>

                    <div class="col-sm-8">

                        <select name="layer" class="form-control">
                            <option value=" " [ _select]>No Background</option>
                            <option value="modis_jpl" [modis_jpl_select]>
                                Daily MODIS Image (JPL)
                            </option>
                            <option value="modis" [modis_select]>
                                MODIS Surface Reflectance
                            </option>
                            <option value="relief" [relief_select]>
                                Shaded Relief
                            </option>
                        </select>
                    </div>
                </div>

                <div class="form-group">


                    <label class="col-sm-2 control-label"> Map mode:</label>

                    <div class="col-sm-8">
                        <select name="mode" class="form-control">
                            <option value="browse" [browse_select]>Browse</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">


                    <label class="col-sm-2 control-label">Map control:</label>

                    <div class="col-sm-8">

                        <select name="zoom" class="form-control">
                            <option value="4" [zoom_4_select]>Zoom to 4</option>
                            <option value="3" [zoom_3_select]>Zoom to 3</option>
                            <option value="2" [zoom_2_select]>Zoom to 2</option>
                            <option value="1" [zoom_1_select]>Recenter</option>
                            <option value="-2" [zoom_-2_select]>Zoom to -2</option>
                            <option value="-3" [zoom_-3_select]>Zoom to -3</option>
                            <option value="-4" [zoom_-4_select]>Zoom to -</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">


                    <label class="col-sm-2 control-label"> </label>

                    <div class="col-sm-8">
                        <input type="submit" name="submit" value="Refresh" class="btn  btn-primary">
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-2 control-label"> </label>

                    <div class="col-sm-8">

                        <!-- DISPLAY THE MAPSERVER-CREATED MAP IMAGE -->

                        <input type="image" name="img" src="../[img]" width="400" height="300" border="1" >
                        <br><br>
                        <img src="../[scalebar]">
                    </div>
                </div>
            </fieldset>
        </form>


    </div>
{% endblock %}